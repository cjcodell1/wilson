{
  "builders": [
    {
      "type": "azure-arm",

      "client_id": "XXXXXX",
      "client_secret": "XXXXXX",
      "tenant_id": "XXXXXX",
      "subscription_id": "XXXXXX",

      "managed_image_resource_group_name": "packer-images",
      "managed_image_name": "ubuntu-precompromised",

      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "16.04-LTS",

      "location": "East US",
      "vm_size": "Standard_DS2_v2"
    }
  ],
  "provisioners": [
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get -y install nginx",
        "apt-get install -y software-properties-common",
        "add-apt-repository --yes --update ppa:ansible/ansible",
        "apt-get -y install ansible",
        "apt-get -y install git",

        "git clone https://XXXXXX:XXXXXX@github.com/cjcodell1/wilson.git",
        "cd wilson",
        "git checkout packer-image",
        "ansible-playbook scenarios/linux/baseline.yml",
        "ansible-playbook scenarios/linux/precompromise/create-unauthorized-user.yml",

        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
    }
  ]
}
